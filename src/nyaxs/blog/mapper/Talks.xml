<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
    <mapper namespace="nyaxs.blog.mapper.TalksMapper">
        <insert id="addTalk" parameterType="Talks" >
            insert into posts ( talk_author,talk_content,talk_date) values (#{talk_author},#{talk_content},#{talk_date})   
        </insert>
         
        <delete id="deleteTalk" parameterType="Talks" >
            delete from posts where id = #{id}  
        </delete>
        
        <update id="updateTalk" parameterType="Talks" >
            update talks set talk_content=#{talk_content} where id=#{id}   
        </update>
        <select id="listTalksAll" resultType="Talks">
            select * from  Talks     
        </select>  
         <select id="listTalksByUserId"  parameterType="_int" resultType="Posts">
            select * from  talks where post_author = #{post_author}     
        </select>
    </mapper>